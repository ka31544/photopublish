{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h2 class="title">Ustawienia użytkownika</h2>
        {% if app.user.id == user.id %}
        {{ form_start(edit_form) }}
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="inputLogin">Login</label>
                    <input type="text" id="inputLogin" value="{{ app.user.username }}" class="form-control" disabled>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="inputLogin">Email</label>
                    <input type="text" id="inputLogin" value="{{ app.user.email }}" class="form-control" disabled>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                {{ form_label(edit_form.firstName) }}
                {{ form_widget(edit_form.firstName) }}
            </div>
            <div class="col">
                {{ form_label(edit_form.lastName) }}
                {{ form_widget(edit_form.lastName) }}
            </div>
        </div>
        <input type="submit" value="Zapisz" class="btn btn-success mb-3 mr-3">
        <a href="{{ path('fos_user_change_password') }}" class="btn btn-warning mb-3">Zmień hasło<i class="fas fa-key fa-ml"></i></a>
        {{ form_end(edit_form) }}
        {% else %}
            <div class="alert alert-danger">Nie masz odpowiednich uprawnień!</div>
        {% endif %}
        <a href="{{ path('_dashboard') }}" class="btn btn-danger"><i class="fas fa-chevron-left fa-mr"></i>Cofnij</a></li>
    </div>
</div>


{% endblock %}
